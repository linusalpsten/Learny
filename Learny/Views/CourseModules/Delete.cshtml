@model Learny.Models.CourseModule

@{
    ViewBag.Title = "Ta bort";
    bool allowDelete = true;
    if (Model.Documents.Count > 0)
    {
        allowDelete = false;
    }
    else
    {
        foreach (var item in Model.Activities)
        {
            if (item.Documents.Count > 0)
            {
                allowDelete = false;
                break;
            }
        }
    }
}

<h2>Ta bort</h2>

<h3>Är du säker på att du vill ta bort den här modulen?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.StartDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StartDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.EndDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EndDate)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @if (allowDelete)
            {
                <input type="submit" value="Delete" class="btn btn-default" />
            }
            else
            {
                <input type="submit" value="Ta bort" class="btn btn-default" disabled/>
            }
            |
            @Html.ActionLink("Tillbaka", "Details", "CourseModules", new { id = Model.CourseId }, null)
            @if (!allowDelete)
            {
                <br />
                <span class="alert-danger">Den här modulen eller dens aktiviteter har dokument kopplade till dem.</span>
            }
        </div>
    }
</div>
