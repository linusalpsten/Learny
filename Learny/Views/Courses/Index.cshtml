@model IEnumerable<Learny.ViewModels.CourseViewModel>

@{
    ViewBag.Title = "Index";
    var today = DateTime.Today;
    var oldCourses = Model.Where(c => c.EndDate < today);
    var activeCourses = Model.Where(c => c.StartDate <= today && c.EndDate >= today);
    var commingCourses = Model.Where(c => c.StartDate > today);
}

