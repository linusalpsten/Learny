@model Learny.Models.Document

@{
    ViewBag.Title = "Delete";
}

<h2>Ta bort</h2>

<h3>Är du säker på att du vill ta bort den här filen?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.DisplayName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DisplayName)
        </dd>

        @if (Model.ModuleActivityId != null)
        {
            <dt>
                @Html.DisplayNameFor(model => model.Activity.CourseModule.Course)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Activity.CourseModule.Course.Name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Activity.CourseModule)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Activity.CourseModule.Name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Activity)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Activity.Name)
            </dd>
        }
        else if (Model.CourseModuleId != null)
        {
            <dt>
                @Html.DisplayNameFor(model => model.Module.Course)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Module.Course.Name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Module)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Module.Name)
            </dd>
        }
        else if (Model.CourseId != null)
        {
            <dt>
                Kurs
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Course.Name)
            </dd>
        }

        <dt>
            @Html.DisplayNameFor(model => model.User)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.User.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TimeStamp)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TimeStamp)
        </dd>

        @if (Model.Description != null && Model.Description != string.Empty)
        {
            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>
        }

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
