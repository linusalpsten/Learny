@model IEnumerable<Learny.Models.Document>

<ul>
    @foreach (var item in Model)
    {
        <li>
            @Html.ActionLink(item.DisplayName, "OpenDocument", new { id = item.Id }, new { title = item.Description })
            @if (User.IsInRole(Learny.Settings.RoleName.teacher))
            {
                @Html.ActionLink(" ", "Delete", new { id = item.Id }, new { @class = "glyphicon glyphicon-remove" })
            }
        </li>
    }
</ul>


